<?xml version="1.0"?>
<openerp>
    <data>
        <record id="fleet_client_wizard_form" model="ir.ui.view">
            <field name="name">fleet client form view</field>
            <field name="model">fleet.client.wizard</field>
            <field name="arch" type="xml">
                <form string="Choose to do">
                    <div states="choose">
                        <sheet>
                            <field name="state" />
                            <group>
                                <field name='client_id'/>
                            </group>
                            <group>
                                <field name='vehicle_id'/>
                            </group>
                        </sheet>
                    </div>
                    <div states="get">
                        <sheet>
                            <group col="2" string="General Properties">
                                <group >
                                    <!--<field name="driver_id" />-->
                                    <!--<field name="vin_sn" />-->
                                </group>
                            </group>
                        </sheet>
                    </div>

                    <footer states="choose">
                        <button name="record_clients" string="Ok" class="btn-primary" type="object" />
                        or
                        <button string="Cancel" class='btn-default' special="cancel" />
                    </footer>
                    <footer states="get">
                        <button string="Cancel" class='btn-default' special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="new_fleet_client_wizard_action" model="ir.actions.act_window">
            <field name="name">Record New Fleet Client</field>
            <field name="res_model">fleet.client.wizard</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="fleet_client_wizard_form"/>
            <field name="target">new</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new client / vehicle.
              </p>
            </field>
        </record>

        <menuitem id="new_fleet_vehicle_wizard_menu"
                  action="new_fleet_client_wizard_action"
                  parent="fleet.fleet_configuration"/>
                  <!--groups="fleet.group_fleet_manager" />-->
    </data>
</openerp>
